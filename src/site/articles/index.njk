---
layout: layouts/base.njk
---

<style>
  .article-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .articles header {
    padding: 0 32px;
  }

  .article-list li {
    background-color: var(--box);
    padding: 22px 32px 32px 32px;
    font-size: 18px;
    font-weight: 500;
    line-height: 1.33;
    display: flex;
    justify-content: space-between;
    margin: 8px 0;
    flex-direction: column;
  }

  .article-list li a {
    padding: 10px 0 18px 0;
    color: var(--primary);
    font-weight: 500;
    line-height: 1.33;
    text-decoration: none;
  }

  .article-list .pill.active {
    background: var(--white);
    color: var(--primary);
  }

  .article-list a span {
    color: var(--dark-grey);
    font-size: 14px
  }

  .article-list a[href^="http"]:after {
    content: '';
    opacity: 0.3;
    padding-right: 22px;
    background: url(/images/external.svg) no-repeat;
    background-position: center right;
    background-size: 14px;
  }

  .article-list a[href^="http"]:hover:after {
    opacity: 1;
  }

  @media only screen and (min-width: 700px) {
    .article-list li {
      align-items: center;
      flex-direction: row;
      padding: 14px 32px 14px 22px;
    }

    .article-list li a {
      padding: 10px;
    }

  }

</style>
{% set articles = collections.articles %}
<section class="articles">
  <header class="with-filter">
    <h1><span id="count">Articles</span></h1>
    <!-- <details>
      <summary class="pill-button filter"><span class="label">Filter Talks</span></summary>
      <div class="body">
        <div class="pill-list">
        {% for tag in articles | unique("data.tags") %}
          <label tabindex="0" class="checkbox-pill"><input value="{{ tag }}" type="checkbox"><span class="pill">{{ tag }}</span></label>
        {% endfor %}
        </div>
      </div>
    </details> -->
  </header>

  <ul class="article-list">
  {% for article in articles %}
  <li>
    <a {% if article.url.startsWith('http') %}target="_blank"{% endif %} href="{{ article.url }}">{{article.data.title}}</a>
    <span class="pills">
        <span class="pill active">{{ article.data.date | format("MMM YYYY") }}</span>{% for tag in article.data.tags %}<span class="pill active">{{ tag }}</span>{% endfor %}
    </span>
  </li>
  {% endfor %}
  </ul>
</section>
